

@{
    ViewBag.Title = "AddDetailedForm";
    Layout = "~/Views/Shared/_Form.cshtml";
}
@Html.AppendCssFile("/Areas/LR_TaskScheduling/Views/TaskDesign/AddDetailedForm.css")
<div class="content" id="form">
    <div class="col-xs-12 lr-form-item">
        <div class="lr-form-item-title">执行时间</div>
        <input id="F_Hour" type="text" class="txt-minutes" isvalid="yes" checkexpession="NotNull" />时
        <input id="F_Minute" type="text" class="txt-minutes" isvalid="yes" checkexpession="NotNull" />分
    </div>
    <div class="col-xs-12 lr-form-item">
        <div class="lr-form-item-title">执行日</div>
        <div id="F_SelectMinute" isvalid="yes" checkexpession="NotNull">
            <ul>
                <li data-value="每日">每日</li>
                <li data-value="每周">每周</li>
                <li data-value="每月">每月</li>
            </ul>
        </div>
        <div id="F_CarryDate" style="display:none;margin-top:5px;"></div>
    </div>
    <div class="col-xs-12 lr-form-item">
        <div class="lr-form-item-title">执行月</div>
        <div id="F_CarryMounth" isvalid="yes" checkexpession="NotNull"></div>
    </div>
</div>
@Html.AppendJsFile("/Areas/LR_TaskScheduling/Views/TaskDesign/AddDetailedForm.js")





